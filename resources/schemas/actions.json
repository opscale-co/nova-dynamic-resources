{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Actions Schema",
  "description": "Schema for validating dynamic resource actions configuration",
  "items": {
    "type": "object",
    "required": ["label", "classname"],
    "additionalProperties": false,
    "properties": {
      "label": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255,
        "description": "Human-readable label for the action"
      },
      "classname": {
        "type": "string",
        "minLength": 1,
        "pattern": "^[a-zA-Z_\\\\][a-zA-Z0-9_\\\\]*$",
        "description": "Fully qualified PHP class name for the Nova action"
      }
    }
  }
}